<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/holo_blue_dark"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView android:textColor="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/textViewCityName" android:text="London, GB" android:layout_marginTop="20dp" android:textSize="30dp" android:gravity="center_horizontal"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingTop="70dp">
        <ImageView android:layout_width="80dp" android:layout_height="80dp" android:src="@drawable/sun" android:id="@+id/imageViewImage" android:maxHeight="20dp" android:maxWidth="20dp" android:layout_weight="1"/>
        <TextView android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="25 C" android:id="@+id/textViewTemp" android:textSize="50dp" android:layout_weight="1"/>
    </LinearLayout>
    <TextView android:textColor="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="few clouds" android:id="@+id/textViewWeather" android:layout_marginTop="160dp" android:textSize="25dp" android:gravity="center_horizontal"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Details:" android:layout_marginTop="220dp" android:textSize="25dp" android:layout_marginStart="20dp"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingTop="270dp" android:layout_marginStart="20dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Humidity" android:textSize="20dp" android:layout_weight="1"/>
        <TextView android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textViewHumidity" android:text=": 50%" android:textSize="20dp" android:layout_weight="7"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingTop="300dp" android:layout_marginStart="20dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Max Temp." android:textSize="20dp" android:layout_weight="1"/>
        <TextView android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=": 25 C" android:id="@+id/textViewMaxTemp" android:textSize="20dp" android:layout_weight="20"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingTop="330dp" android:layout_marginStart="20dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Min Temp." android:textSize="20dp" android:layout_weight="1"/>
        <TextView android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textViewMinTemp" android:text=": 25 C" android:textSize="20dp" android:layout_weight="13"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="20dp" android:paddingTop="360dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:text="Pressure" android:textSize="20dp"/>
        <TextView android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="7" android:text=": 50" android:id="@+id/textViewPressure" android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="20dp" android:paddingTop="390dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:text="Wind speed" android:textSize="20dp"/>
        <TextView android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="30" android:id="@+id/textViewWindSpeed" android:text=": 5" android:textSize="20dp"/>
    </LinearLayout>

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:layout_alignParentRight="true"
        android:id="@+id/buttonSearch"
        android:background="@drawable/ic_baseline_add_circle_24"
        />

</RelativeLayout>